<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homestay.mapper.CommentMapper">
    <select id="getCommentByUserId" resultType="com.homestay.entity.Comment">
        SELECT * FROM tb_comment WHERE user_id=#{userId} AND del_flag=0
    </select>

    <update id="resetCommentByUserId">
        UPDATE tb_comment SET del_flag=0
    </update>
    <update id="deleteCommentByUserId">
        UPDATE tb_comment SET del_flag=1
    </update>
</mapper>