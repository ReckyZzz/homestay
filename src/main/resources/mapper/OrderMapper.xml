<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.homestay.mapper.OrderMapper">
    <select id="getOrderByOrderId" resultType="com.homestay.entity.Order">
        SELECT * FROM tb_order WHERE order_id=#{orderId} AND del_flag=0
    </select>

    <update id="deleteOrderByUserId">
        UPDATE tb_order SET del_flag=1
    </update>
    <update id="resetOrderByUserId">
        UPDATE tb_order SET del_flag=0
    </update>
</mapper>